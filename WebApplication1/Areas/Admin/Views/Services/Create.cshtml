@model PortfolioWeb.Areas.Admin.Models.ServiceEditModel

@{
    ViewData["Title"] = "New Service";
    var contextUserId = ViewData["UserId"] is int i ? (int?)i : null;
}

<h1 class="h3 mb-4">New Service</h1>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <form method="post" action="@Url.Action("Create", "Services", new { area = "Admin", userId = contextUserId })" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" id="title" name="Title" value="@Model.Title" maxlength="120" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" id="desc" name="Description" rows="6" required>@Model.Description</textarea>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label" for="pricing">Pricing</label>
                    <input class="form-control" id="pricing" name="Pricing" value="@Model.Pricing" maxlength="100">
                </div>
                <div class="col-md-6">
                    <label class="form-label" for="displayOrder">Display Order</label>
                    <input class="form-control" id="displayOrder" name="DisplayOrder" type="number" value="@Model.DisplayOrder">
                </div>
            </div>

            <div class="mt-3 mb-3">
                <label class="form-label" for="tags">Tags (comma separated)</label>
                <input class="form-control" id="tags" name="Tags" value="@Model.Tags" maxlength="255">
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" id="isActive" name="IsActive" type="checkbox" value="true" @(Model.IsActive ? "checked" : string.Empty)>
                <label class="form-check-label" for="isActive">Active</label>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-danger" type="submit">Save</button>
                <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Services", new { area = "Admin", userId = contextUserId })">Cancel</a>
            </div>
        </form>
    </div>
</div>
