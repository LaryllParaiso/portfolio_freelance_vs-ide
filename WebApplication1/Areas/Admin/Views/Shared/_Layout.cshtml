@{
    var title = ViewData["Title"] as string;
    if (string.IsNullOrWhiteSpace(title))
    {
        title = "Admin";
    }
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@title</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500&family=Inter:wght@400;500;600;700&family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="@Url.Content("~/css/variables.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/global.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Admin</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNavbar">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "HomeContent", new { area = "Admin" })">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "AboutContent", new { area = "Admin" })">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Services", new { area = "Admin" })">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Projects", new { area = "Admin" })">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Messages", new { area = "Admin" })">Messages</a>
                        </li>
                    </ul>
                }

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "" })">View Site</a>
                    </li>

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <form method="post" action="@Url.Action("Logout", "Account", new { area = "Admin" })" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger ms-lg-3" type="submit">Sign Out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-sm btn-danger ms-lg-3" href="@Url.Action("Login", "Account", new { area = "Admin" })">Log in</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/ui.js")"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
