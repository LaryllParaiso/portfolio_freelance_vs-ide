@model PortfolioWeb.Models.ContactMessageRecord

@{
    ViewData["Title"] = "Message";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="h3 mb-1">Message</h1>
        <div class="text-muted">From @Model.Name &lt;@Model.Email&gt;</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Messages", new { area = "Admin" })">Back</a>
        <form method="post" action="@Url.Action("Delete", "Messages", new { area = "Admin", id = Model.Id })" class="d-inline" onsubmit="return confirm('Delete this message?');">
            @Html.AntiForgeryToken()
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="text-muted small">Name</div>
                <div class="fw-semibold">@Model.Name</div>
            </div>
            <div class="col-md-6">
                <div class="text-muted small">Email</div>
                <div class="fw-semibold">@Model.Email</div>
            </div>
        </div>

        <hr>

        <div class="text-muted small mb-2">Message</div>
        <div style="white-space: pre-wrap;">@Model.Message</div>
    </div>
</div>
