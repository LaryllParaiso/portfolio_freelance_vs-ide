@{
    var title = ViewData["Title"] as string;
    if (string.IsNullOrWhiteSpace(title))
    {
        title = "Portfolio";
    }

    var homeUrl = "#home";
    var aboutUrl = "#about";
    var servicesUrl = "#services";
    var portfolioUrl = "#portfolio";
    var contactUrl = "#contact";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@title</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500&family=Inter:wght@400;500&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css">

    <link rel="stylesheet" href="@Url.Content("~/css/variables.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/global.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")">
</head>
<body data-bs-spy="scroll" data-bs-target="#publicNavbar" data-bs-offset="96" tabindex="0">

    <nav id="publicNavbar" class="navbar navbar-expand-lg navbar-dark fixed-top navbar-public">
        <div class="container">
            <a class="navbar-brand fw-bold js-scroll" href="@homeUrl">My Portfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPublicCollapse" aria-controls="navbarPublicCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarPublicCollapse">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link js-scroll" href="@homeUrl">Home</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll" href="@aboutUrl">About</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll" href="@servicesUrl">Services</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll" href="@portfolioUrl">Portfolio</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll" href="@contactUrl">Contact</a></li>
                    <li class="nav-item ms-lg-3 mt-3 mt-lg-0">
                        <a class="btn btn-danger rounded-pill px-4" href="@Url.Action("Entry", "Account", new { area = "Admin" })">@(User?.Identity?.IsAuthenticated == true ? "Dashboard" : "Log in")</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="navOverlay" class="nav-overlay" aria-hidden="true"></div>

    @RenderBody()

    <footer class="site-footer mt-5">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="footer-brand mb-2">My<span class="text-accent">Portfolio</span></div>
                    <div class="footer-muted">Building beautiful, functional web experiences. Let's create something amazing together.</div>
                </div>

                <div class="col-6 col-lg-4">
                    <div class="footer-title">Quick Links</div>
                    <div class="footer-links">
                        <a class="footer-link js-scroll" href="@homeUrl">Home</a>
                        <a class="footer-link js-scroll" href="@aboutUrl">About</a>
                        <a class="footer-link js-scroll" href="@servicesUrl">Services</a>
                        <a class="footer-link js-scroll" href="@portfolioUrl">Portfolio</a>
                        <a class="footer-link js-scroll" href="@contactUrl">Contact</a>
                    </div>
                </div>

                <div class="col-6 col-lg-4">
                    <div class="footer-title">Stay Updated</div>
                    <div class="footer-muted mb-3">Subscribe to my newsletter for tips, articles, and project updates.</div>
                    <form class="footer-newsletter" method="get" action="#" data-no-spinner="1">
                        <input class="form-control footer-newsletter-input" type="email" placeholder="Your email" aria-label="Your email">
                        <button class="btn btn-danger footer-newsletter-btn" type="submit">Join</button>
                    </form>
                </div>
            </div>

            <div class="footer-divider my-4"></div>

            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 footer-bottom">
                <div class="footer-muted small">
                    &copy; @DateTime.Now.Year MyPortfolio. Made with <span class="text-accent">&#10084;</span> by a passionate developer.
                </div>
                <div class="d-flex gap-3 small">
                    <a class="footer-link" href="#">Privacy Policy</a>
                    <a class="footer-link" href="#">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <button id="scrollTopBtn" class="scroll-top-btn" type="button" aria-label="Scroll to top">
        <i class="bi bi-arrow-up"></i>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script src="@Url.Content("~/js/site.js")"></script>
    <script src="@Url.Content("~/js/ui.js")"></script>
    <script>
        if (typeof AOS !== 'undefined') {
            AOS.init({ once: true, duration: 800, easing: 'ease-out-cubic', offset: 100, delay: 0 });
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
